{% extends "base.twig" %}

{% block body %}
    <h1>{{ inventoryStatus.name | capitalize }} inventory</h1>
    {% for t in types %}
        {% set type = t[0] %}
        <h2>
            {{ type.name }}: <span class="tag tag-pill tag-default">
            {{ type.product_count }}</span> unit(s)
        </h2>
        <table class ="table table-striped" >
        <tr>
            <th>Diopter</th> <th>Count</th>
        </tr>
        {% for p in t.products %}
            <tr>
                <td>{{ p.SphCorrected }}</td> <td>{{ p.total }}</td>
            </tr>
        {% endfor %}
        </table>
    {% endfor %}
{{ products.links() | raw }}

{% endblock %}
