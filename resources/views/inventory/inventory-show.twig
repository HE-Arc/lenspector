{% extends "base.twig" %}

{% block body %}
    <h1>{{ inventoryStatus.name | capitalize }} inventory</h1>
    {% if products is defined and products | length > 0 %}
        <table class ="table table-striped" >
            <caption>
                <h2>
                    {{ type.name }}
                    <span class="badge">
                        {{ total }} <i class=accessible_elem>products</i>
                    </span>
                </h2>
                <p>
                    Diopter: {{ diopter }}
                </p>
            </caption>
            <tr>
                <th scope=col>Serial number</th>
                <th scope=col>Expiration date</th>
            </tr>
            {% for p in products %}
                <tr>
                    <td>
                        {{ p.sn }}
                    </td>
                    <td>
                        {{ p.dateExpiration }}
                    </td>
                </tr>
            {% endfor %}
        </table>
        <div class="text-center">
            {{ products.links | raw }}
        </div>
    {% else %}
        <p class="alert alert-info">
            No products of this type and diopter in stock.
        </p>
    {% endif %}
{% endblock %}
