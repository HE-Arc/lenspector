{% extends "base.twig" %}

{% block body %}
    <h1>{{ inventoryStatus.name | capitalize }} inventory</h1>
    <div class="col-xs-12 row">
        {% for t in typesCounts %}
            <p class="col-xs-2">
                <b>{{ t.name }}</b>:
                <a href="{{ route('inventory.index', [inventoryStatus, t]) }}">
                    {{ t.product_count }}
                </a>
            </p>
        {% endfor %}
    </div>
    <table class ="table table-striped" >
        <caption>
            <h2>
                {{ productType.name }}
                <span class="badge">
                    {{ quantity }} <i class=accessible_elem>products of type {{ productType.name }}</i>
                </span>
            </h2>
        </caption>
        <tr>
            <th scope=col>Diopter</th>
            <th scope=col>Count</th>
        </tr>
        {% for l in lenses %}
            <tr class="clickable-row"
                data-href="{{ route('inventory.show', [inventoryStatus, productType, l.SphCorrected]) }}">
                <td>
                    <a href="{{ route('inventory.show', [inventoryStatus, productType, l.SphCorrected]) }}">
                        {{ l.SphCorrected }}
                    </a>
                </td>
                <td>{{ l.total }}</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
